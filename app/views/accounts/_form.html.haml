.form-horizontal
  .fieldset
    .legend
    = simple_form_for @account, :html => { :class => 'form-horizontal' }  do |f|
      .span4
        = f.input :name
        = f.input :email
        = f.input :assigned_to, collection: (User.all.map(&:first_name).prepend('None'))
        = f.input :website
      .span4
        = f.input :phone
        = f.input :address
      .span8
        = f.submit 'Update account', class: 'btn btn-large'
