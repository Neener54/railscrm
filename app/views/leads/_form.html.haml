.span12.offset9
%br
  .form-horizontal
    = simple_form_for @lead, :html => { :class => 'form-horizontal' }  do |f|
      %fieldset
        %legend Lead Info
        .row
          .span4
            = f.input :first_name
            = f.input :last_name
            = f.input :email, as: :email
            = f.input :phone
            = f.input :company
            = f.input :comments, as: :text, :input_html => {rows: 5}
          .span4.offset1
            = f.input :lead_owner,      collection:(@lead_owner)#, input_html: {class: 'chosen-select'}
            = f.input :interested_in,   collection:(@lead_interests)#, input_html: {class: 'chosen-select'}
            = f.input :lead_status,     collection:(@lead_status)#, input_html: {class: 'chosen-select'}
            = f.input :lead_source,     collection:(@lead_sources)#, input_html: {class: 'chosen-select'}


      %fieldset
        %legend Address Info
        .row
          .span4
            = f.input :address
            = f.input :city
          .span4
            = f.input :state
            = f.input :zip
        %br
        .row.pull-right 
          = f.submit class: 'btn btn-primary'
          = link_to 'Cancel', leads_path, class: "btn btn-danger"

