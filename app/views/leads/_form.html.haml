.form-horizontal
  .fieldset
    .legend
    = simple_form_for @lead, :html => { :class => 'form-horizontal' }  do |f|
      .span4
        = f.input :first_name
        = f.input :last_name
        = f.input :email
        = f.input :phone
        = f.input :company
        = f.input :comments, as: :text, :input_html => {rows: 10}
      .span4
        = f.input :assigned_to_id, collection:(User.all.map(&:first_name).prepend('None'))
        = f.input :interested_in, collection:(@lead_interests)
        = f.input :lead_status, collection:(@lead_status)
        = f.input :lead_source, collection:(@lead_sources)
      .span8  
        = f.submit class: 'btn btn-large'

      / = f.fields_for :notes do |note_form|
      /   = note_form.label :content, "Add note for #{@lead.first_name}"
      /   = note_form.text_area :content, rows: 5, class: 'span6'
      /   = note_form.submit 'Add Note', class: 'btn btn-large'
      / - @lead.notes.each do |note|
      /   %p= note.content

